<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textSize="25sp"
        android:background="#0000"
        android:onClick="onStartNextActivityClick"
        android:id="@+id/btn_next_activity"
        app:layout_constraintBottom_toTopOf="@+id/btn_divide"
        app:layout_constraintRight_toRightOf="@+id/btn_divide"/>


    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:hint="result"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_percent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:freezesText="true"/>


    <Button
        android:id="@+id/btn_clear"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="C"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_eight"
        app:layout_constraintLeft_toLeftOf="@+id/btn_seven"
        app:layout_constraintRight_toRightOf="@+id/btn_eight"
        android:onClick="onOperationClick"/>

    <Button
        android:id="@+id/btn_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_clear"
        app:layout_constraintLeft_toRightOf="@+id/btn_clear"
        app:layout_constraintTop_toTopOf="@+id/btn_clear"
        android:onClick="onOperationClick"/>

    <Button
        android:id="@+id/btn_seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_eight"
        app:layout_constraintRight_toLeftOf="@+id/btn_eight"
        app:layout_constraintTop_toTopOf="@+id/btn_eight"
        android:onClick="onNumberClick"/>

    <Button
        android:id="@+id/btn_eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_five"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/btn_five"
        app:layout_constraintRight_toRightOf="@+id/btn_five"
        android:onClick="onNumberClick"/>

    <Button
        android:id="@+id/btn_nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_eight"
        app:layout_constraintLeft_toRightOf="@+id/btn_eight"
        app:layout_constraintTop_toTopOf="@+id/btn_eight"
        android:onClick="onNumberClick"/>

    <Button
        android:id="@+id/btn_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_five"
        app:layout_constraintRight_toLeftOf="@+id/btn_five"
        app:layout_constraintTop_toTopOf="@+id/btn_five"
        android:onClick="onNumberClick"/>

    <Button
        android:id="@+id/btn_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_two"
        app:layout_constraintLeft_toRightOf="@+id/btn_four"
        android:onClick="onNumberClick"/>

    <Button
        android:id="@+id/btn_six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_five"
        app:layout_constraintLeft_toRightOf="@+id/btn_five"
        app:layout_constraintTop_toTopOf="@+id/btn_five"
        android:onClick="onNumberClick"/>

    <Button
        android:id="@+id/btn_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_two"
        app:layout_constraintRight_toLeftOf="@+id/btn_two"
        app:layout_constraintTop_toTopOf="@+id/btn_two"
        android:onClick="onNumberClick"/>

    <Button
        android:id="@+id/btn_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_zero"
        app:layout_constraintLeft_toLeftOf="@+id/btn_five"
        app:layout_constraintRight_toRightOf="@+id/btn_five"
        android:onClick="onNumberClick"/>

    <Button
        android:id="@+id/btn_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_two"
        app:layout_constraintLeft_toRightOf="@+id/btn_two"
        app:layout_constraintTop_toTopOf="@+id/btn_two"
        android:onClick="onNumberClick"/>

    <Button
        android:id="@+id/btn_zero"
        android:layout_width="175sp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/btn_one"
        app:layout_constraintRight_toRightOf="@+id/btn_two"
        android:onClick="onNumberClick"/>

    <Button
        android:id="@+id/btn_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_zero"
        app:layout_constraintLeft_toRightOf="@+id/btn_zero"
        app:layout_constraintTop_toTopOf="@+id/btn_zero"
        android:onClick="onOperationClick"/>

    <Button
        android:id="@+id/btn_divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_percent"
        app:layout_constraintLeft_toRightOf="@+id/btn_percent"
        app:layout_constraintTop_toTopOf="@+id/btn_percent"
        android:onClick="onOperationClick" />

    <Button
        android:id="@+id/btn_multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_nine"
        app:layout_constraintLeft_toRightOf="@+id/btn_nine"
        app:layout_constraintTop_toTopOf="@+id/btn_nine"
        android:onClick="onOperationClick"/>


    <Button
        android:id="@+id/btn_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_six"
        app:layout_constraintLeft_toRightOf="@+id/btn_six"
        app:layout_constraintTop_toTopOf="@+id/btn_six"
        android:onClick="onOperationClick"/>

    <Button
        android:id="@+id/equal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_dot"
        app:layout_constraintLeft_toRightOf="@+id/btn_dot"
        app:layout_constraintTop_toTopOf="@+id/btn_dot"
        android:onClick="onOperationClick"/>

    <Button
        android:id="@+id/btn_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_three"
        app:layout_constraintLeft_toRightOf="@+id/btn_three"
        app:layout_constraintTop_toTopOf="@+id/btn_three"
        android:onClick="onOperationClick"/>
    />



</androidx.constraintlayout.widget.ConstraintLayout>